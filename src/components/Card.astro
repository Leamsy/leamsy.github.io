---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { onclick, image, title, body } = Astro.props;
---
<li class="link-card">
    <a onclick={onclick}>
        <div class="img">
			<img width="350" height="auto" src={image} class="card-img" alt="Project">
        </div>
		<h3>
			{title}
		</h3>
		<div class="tag-list">
			<slot />
		</div>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        background-size: 400%;
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        border-radius: 8px;
        color: #fdebf3;
		cursor: pointer;
    }

    .img {
		display: flex;
		align-items: center;
		justify-content: center;
    }

    img {
        border-radius: 16px;
    }

    h3 {
        margin: 10px;
        font-family: 'Josefin Sans', sans-serif;
        font-size: 1.5rem;
        font-weight: normal;
        text-align: center;
    }

    p {
        font-size: 1em;
        line-height: 1.5;
        text-indent: 0;
        text-align: center;
        margin: 0.5rem 0 0;
		line-break: auto;
    }
	
	.tag-list
	{
		text-align: center;
		padding-bottom: 5px;
	}

    .link-card:hover {
        transform: scale(1.05);
    }
</style>
