---
const {modal_id} = Astro.props;
---

<script>

    class Modal extends HTMLElement {

        OpenModalFun()
        {
            const modal = document.getElementById(this.dataset.card_id) as HTMLDialogElement;

            modal.showModal();

            const body = document.querySelector('body');
            body.style.overflowY = 'hidden';

            window.onclick = function(event)
            {
                if (event.target == modal) {
                    modal.close();
                    body.style.overflowY = 'auto';
                }
            }
        }
    }

    customElements.define('modal-element', Modal);
    
</script>

<dialog id={modal_id}>
    <form method="dialog" style="display: unset">
        <button class="close">
            X
        </button>
    </form>
    <div class="body">
        <slot name="main" />
    </div>
</dialog>

<style lang="scss">
  dialog {
    max-width: 800px;
    max-height: 92%;
    position: fixed;
    opacity: 0;
    transition: opacity 0.25s;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #1e1e2e;
    border-radius: 16px;
    color: #fdebf3;
    &::backdrop {
      position: fixed;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background: rgba(255, 0, 0, 0.1);
    }
  }
  dialog[open] {
    opacity: 1;
  }

  dialog::-webkit-scrollbar {
    width: 16px;
    height: 16px;
  }

  dialog::-webkit-scrollbar-thumb {
    background: #433f4f;
    border-radius: 16px;
    box-shadow: inset 2px 2px 2px hsla(0,0%,100%,.25),inset -2px -2px 2px rgba(0,0,0,.25);
  }

  dialog::-webkit-scrollbar-track {
    background: linear-gradient(90deg,#434343,#434343 1px,rgba(1, 1, 1, 0.1) 0,rgba(1, 1, 1, 0.1));
    border-radius: 16px;
  }
  
</style>

<style>
    
    .body
    {
        height: 90vh;
        padding: 0 10px 0 10px;
        overflow-y: auto;
    }
    
    .close
    {
        color: inherit;
        background-color: transparent;
        border: 2px solid rgba(253, 235, 243, 0.9);
        text-align: center;
        position: fixed;
        right: 8px;
        top: 8px;
        padding: 10px 10.5px 6px 11.5px;
        border-radius: 50%;
        font: 600 20px 'Josefin Sans', sans-serif;
        outline: 0;
    }
    .close:hover {
        transform: scale(1.05);
    }
    
    .body::-webkit-scrollbar {
        width: 16px;
        height: 16px;
    }

    .body::-webkit-scrollbar-thumb {
        background: rgba(67, 63, 79, 0.5);
        border-radius: 16px;
        box-shadow: inset 2px 2px 2px hsla(0,0%,100%,.25),inset -2px -2px 2px rgba(0,0,0,.25);
    }

    .body::-webkit-scrollbar-track {
        background: linear-gradient(90deg,#434343,#434343 1px,rgba(1, 1, 1, 0.1) 0,rgba(1, 1, 1, 0.1));
        border-radius: 16px;
    }
    
    
</style>