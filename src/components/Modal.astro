---
const {id} = Astro.props;
---

<dialog id={id}>
    <form method="dialog" style="display: unset">
        <button class="close">
            X
        </button>
    </form>
    <div class="body">
        <slot name="main" />
    </div>
</dialog>

<style lang="scss">
  dialog {
    max-width: 800px;
    max-height: 92%;
    position: fixed;
    opacity: 0;
    transition: opacity 0.25s;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #1e1e2e;
    border-radius: 16px;
    color: #fdebf3;
    &::backdrop {
      position: fixed;
      top: 0px;
      right: 0px;
      bottom: 0px;
      left: 0px;
      background: rgba(255, 0, 0, 0.1);
    }
  }
  dialog[open] {
    opacity: 1;
  }
  
</style>

<style>
    
    .body
    {
        height: 90vh;
    }
    
    .close
    {
        color: inherit;
        background-color: transparent;
        border: 2px solid rgba(253, 235, 243, 0.9);
        text-align: center;
        position: fixed;
        right: 8px;
        top: 8px;
        padding: 10px 10.5px 6px 11.5px;
        border-radius: 50%;
        font: 600 20px 'Josefin Sans', sans-serif;
        outline: 0;
    }
    .close:hover {
        transform: scale(1.05);
    }
    
    
</style>